<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], title: 'Oscar Perez Portfolio', sticky: false) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], title: 'Oscar Perez Portfolio', sticky: false) %>
<% else %>
    <%= js add_gritter(flash[:notice], title: 'Oscar Perez Portfolio', sticky: false) %>
<% end %>